declare export class Cancelable {
  cancel(): void;

  static from(cb: () => void): Cancelable;
  static empty(): Cancelable;
  static collection(...refs: Array<Cancelable>): Cancelable;
}

declare export class BoolCancelable extends Cancelable {
  isCanceled(): boolean;

  static from(cb: () => void): BoolCancelable;
  static empty(): BoolCancelable;
  static alreadyCanceled(): BoolCancelable;
  static collection(...refs: Array<Cancelable>): BoolCancelable;
}

declare export class AssignableCancelable extends BoolCancelable {
  update(value: Cancelable): this;

  static from(cb: () => void): AssignableCancelable;
  static empty(): AssignableCancelable;
  static alreadyCanceled(): AssignableCancelable;
}

declare export class MultiAssignmentCancelable extends AssignableCancelable {
  constructor(initial?: Cancelable): MultiAssignmentCancelable;
  update(value: Cancelable): this;
  static from(cb: () => void): MultiAssignmentCancelable;
  static empty(): MultiAssignmentCancelable;
}

declare export class SerialAssignmentCancelable extends AssignableCancelable {
  constructor(initial?: Cancelable): SerialAssignmentCancelable;
  update(value: Cancelable): this;
  static from(cb: () => void): SerialAssignmentCancelable;
  static empty(): SerialAssignmentCancelable;
}

declare export class SingleAssignmentCancelable extends AssignableCancelable {
  constructor(): SingleAssignmentCancelable;
  update(value: Cancelable): this;
  static from(cb: () => void): SingleAssignmentCancelable;
  static empty(): SingleAssignmentCancelable;
}
